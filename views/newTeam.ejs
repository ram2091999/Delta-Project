<%- include partials/userHeader.ejs %>
<%- include partials/messages.ejs %>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong" style="margin-top:20px;">
  Add members
</button>


<form method="post" action="/newTeam/<%=user%>">
  <div class="form-group">
    <label for="exampleFormControlInput1">Team Name:</label>
    <input  class="form-control" id="exampleFormControlInput1" placeholder="Team Name" name="name">
  </div>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">Description:</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description"></textarea>
  </div>
  <label for="">Members:</label>
  <ul>
    <%array.forEach(function(e){%>
      <li><%=e.username%></li>
    <%});%>

  </ul>
  <button type="submit" class="btn btn-primary">Create Team</button>
</form>
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add Team Members</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%names.forEach(function(e){%>
          <form  action="/addNewUser/<%=user%>/<%=e%>" method="post" style="margin-bottom:5px;">
            <%=e%>
            <button type="submit" class="btn btn-sm btn-secondary" name="button">Add</button>
          </form>
        <%});%>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<%- include partials/footer.ejs %>
